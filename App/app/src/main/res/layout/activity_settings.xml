<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsconstraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1.2"
            android:orientation="horizontal">

            <Space
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight=".05"
                tools:ignore="NestedWeights" />

            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight=".65"
                android:gravity="center_vertical"
                android:text="@string/settings"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1.125"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".05"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/settingsupdatedatabasebutton"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:text="@string/update_database" />

            <ProgressBar
                android:id="@+id/settingsprogressbar"
                style="?android:attr/progressBarStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                tools:visibility="gone" />

            <Space
                android:id="@+id/settingsspace"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight=".12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1.125"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".05"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/settingsreportbugbutton"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:text="@string/report_bug" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight=".12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1.125"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".05"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/settingstermsbutton"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:text="@string/terms_and_conditions" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight=".12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1.125"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".05"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/settingsbluetoothbutton"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:text="@string/bluetooth_test" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight=".12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1.125"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".05"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/settingssigninbutton"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:text="@string/login" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight=".12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1.125"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".05"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/settingssignoutbutton"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:text="@string/logout" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight=".2" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>