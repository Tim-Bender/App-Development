<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight=".75" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1.75"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/direction"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:background="@drawable/back"
                android:gravity="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/connectorinformation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".6"
                android:background="@drawable/back"
                android:gravity="center"
                android:textSize="22sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/pinnumber"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_gravity="center"
            android:layout_weight=".9"
            android:gravity="center"
            android:text="Pin 5"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight=".375" />

        <TextView
            android:id="@+id/pinname"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight=".9"
            android:gravity="center"
            android:text="LH Digger Nose Pos."
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight=".375" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight=".9"
            android:gravity="center"
            android:text="6.6 mA"
            android:textSize="26sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight=".55" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1.5"
            android:onClick="viewpinloc"
            android:text="View Pin Location"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:onClick="prevPin"
                android:text="Prev Pin" />

            <Button
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:onClick="nextPin"
                android:text="Next Pin" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
